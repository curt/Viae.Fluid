    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="../../src/Viae.Fluid.Markdown/Viae.Fluid.Markdown.csproj" />
    </ItemGroup>
    <ItemGroup>
        <Using Include="FluentAssertions" />
        <Using Include="Fluid.Values" />
        <Using Include="Fluid" />
        <Using Include="Markdig" />
        <Using Include="Microsoft.VisualStudio.TestTools.UnitTesting" />
    </ItemGroup>
</Project>
